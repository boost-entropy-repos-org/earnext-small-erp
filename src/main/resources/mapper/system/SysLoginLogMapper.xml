<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.dongxibao.erp.mapper.system.SysLoginLogMapper">

    <resultMap type="top.dongxibao.erp.entity.system.SysLoginLog" id="BaseResultMap">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="ipAddr" column="ip_addr"/>
        <result property="browser" column="browser"/>
        <result property="os" column="os"/>
        <result property="status" column="status"/>
        <result property="message" column="message"/>
        <result property="delFlag" column="del_flag"/>
        <result property="remark" column="remark"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectFields">
         a.id, a.username, a.ip_addr, a.browser, a.os, a.status, a.message, a.del_flag, a.remark, a.create_by, a.create_time, a.update_by, a.update_time
    </sql>

    <select id="selectByCondition" parameterType="top.dongxibao.erp.entity.system.SysLoginLog"
            resultMap="BaseResultMap">
        SELECT
        <include refid="selectFields"/>
        FROM sys_login_log a
        <where>
            <if test="beginTime != null"><!-- 开始时间检索 -->
                AND <![CDATA[ a.create_time >= #{beginTime} ]]>
            </if>
            <if test="endTime != null"><!-- 结束时间检索 -->
                AND <![CDATA[ a.create_time <= #{endTime} ]]>
            </if>
            <!-- 数据范围过滤 -->
            ${dataScope}
        </where>
    </select>
</mapper>