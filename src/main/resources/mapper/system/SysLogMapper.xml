<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.dongxibao.erp.mapper.system.SysLogMapper">

    <resultMap type="top.dongxibao.erp.entity.system.SysLog" id="BaseResultMap">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="businessType" column="business_type"/>
        <result property="method" column="method"/>
        <result property="requestMethod" column="request_method"/>
        <result property="operatorType" column="operator_type"/>
        <result property="operName" column="oper_name"/>
        <result property="logUrl" column="log_url"/>
        <result property="logIp" column="log_ip"/>
        <result property="requestParam" column="request_param"/>
        <result property="resultParam" column="result_param"/>
        <result property="status" column="status"/>
        <result property="errorMsg" column="error_msg"/>
        <result property="delFlag" column="del_flag"/>
        <result property="remark" column="remark"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectFields">
         a.id, a.title, a.business_type, a.method, a.request_method, a.operator_type, a.oper_name, a.log_url, a.log_ip, a.request_param, a.result_param, a.status, a.error_msg, a.del_flag, a.remark, a.create_by, a.create_time, a.update_by, a.update_time
    </sql>

    <select id="selectByCondition" parameterType="top.dongxibao.erp.entity.system.SysLog" resultMap="BaseResultMap">
        SELECT
        <include refid="selectFields"/>
        FROM sys_log a
        <where>
            <if test="beginTime != null"><!-- 开始时间检索 -->
                AND <![CDATA[ a.create_time >= #{beginTime} ]]>
            </if>
            <if test="endTime != null"><!-- 结束时间检索 -->
                AND <![CDATA[ a.create_time <= #{endTime} ]]>
            </if>
            <!-- 数据范围过滤 -->
            ${dataScope}
        </where>
    </select>
</mapper>